from tkinter import *
from tkinter.ttk import *
from time import strftime



window = Tk()
window.title('CLOCK')
window.geometry('340x85')
window.resizable(False,False)
window.configure(bg = 'black')
window.attributes('-alpha',.5)
window.attributes('-topmost',1)

label = Label(window, font = ('ds-digital',60), background = 'black', foreground = 'white')
label.pack(anchor = 'w')

def time():
    a = strftime('%H:%M:%S')
    label.config(text = a)
    label.after(1000,time)

time()
window.mainloop()
